@page
@model AspNetCoreIdentityCourse.IdentityApp.Pages.Account.LoginTwoFactorModel
@{
}

<p>
    <h3>Please enter the Code from your email:</h3>
</p>

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="input-group row mb-3">
            <div class="col-2">
                <label asp-for="Email2FA.SecurityCode"></label>
            </div>
            <div class="col">
                <input type="text" asp-for="Email2FA.SecurityCode" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Email2FA.SecurityCode"></span>
        </div>
        <div class="input-group row mb-3">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Verify" />
            </div>
            <div class="col">
                <input type="hidden" asp-for="Email2FA.RememberMe" />
            </div>
        </div>
    </form>
</div>

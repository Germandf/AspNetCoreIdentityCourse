@page
@model AspNetCoreIdentityCourse.IdentityApp.Pages.Account.RegisterModel
@{
}

<p>
    <h3>User Registration</h3>
</p>

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="input-group row mb-3">
            <div class="col-2">
                <label asp-for="RegisterVm.Email"></label>
            </div>
            <div class="col">
                <input type="text" asp-for="RegisterVm.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="RegisterVm.Email"></span>
        </div>
        <div class="input-group row mb-3">
            <div class="col-2">
                <label asp-for="RegisterVm.Password"></label>
            </div>
            <div class="col">
                <input type="password" asp-for="RegisterVm.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="RegisterVm.Password"></span>
        </div>
        <div class="input-group row mb-3">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
            <div class="col">
            </div>
        </div>
    </form>
</div>
